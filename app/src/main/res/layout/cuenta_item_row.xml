<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="2dp"
    android:orientation="horizontal"
    >


    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"

        android:layout_width="match_parent"
        android:layout_height="60dp"


        >


        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
            android:layout_height="34dp"
            android:padding="2dp"
            android:orientation="horizontal"
                android:layout_weight="7.73">

                <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Ryeah"
                android:layout_gravity="center"
                android:id="@+id/textcuentaNombre" />


                <View
                android:layout_width="15dp"
                android:layout_height="0dp"
                android:layout_weight="0.78"
                />

            <TextView
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Cantidad:15"
                android:layout_gravity="center"
            android:id="@+id/Textcuentacantidad" />

            <Button
                android:layout_gravity="center"
                android:text="+"
                android:textSize="25dp"
                android:layout_width="46dp"
                android:layout_height="76dp"
                android:id="@+id/buttonmascuenta" />

            <Button
                android:layout_gravity="center"
                android:layout_alignParentRight="true"
                android:layout_width="49dp"
                android:textSize="25dp"
                android:layout_height="68dp"
                android:text="-"
                android:id="@+id/botoneliminarcuenta" />

        </LinearLayout>

            <TextView
                android:text="Precio:1000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/preciocuenta"
                android:layout_weight="1" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar" />

</LinearLayout>
